clear all
clc

N = 1e2;

epsi = linspace(-3,3,N);
a = linspace(-2,5,N);

sol = zeros(N,1);

T = 2*pi;
figure()
hold on
counter = 0;

for i=1:N
	for ii=1:N
		x = [1, 0;...
			0,	1];
		A =@(t)	[0,								1;...
				-(a(i)-epsi(ii)*cos(t)),		0];
		abs(eig(exp(A(T))))
		if abs(eig(exp(A(T)))) < 1
			plot(a(i),epsi(ii),'*')
			counter = counter+1;
		end
	end
end